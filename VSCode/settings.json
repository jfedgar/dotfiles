{
  "window.zoomLevel": 1,
  "breadcrumbs.enabled": true,
  "editor.renderControlCharacters": true,
  "editor.fontSize": 16,
  "editor.fontFamily": "FiraCode-Retina, 'Fira Code', 'Hack Nerd Font', Menlo, Monaco, 'Courier New', monospace",
  "editor.tabCompletion": "on",
  "explorer.openEditors.visible": 1,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "o"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.quickOpen"
        }
      ]
    }
  ],
  //"editor.formatOnSave": true, // THIS WILL TRIGGER PRETTIER ON SAVE
  "prettier.eslintIntegration": true, // THIS WILL MAKE IT COMMUNICATE WITH ESLINT
  "editor.acceptSuggestionOnCommitCharacter": false,
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[ruby]": {
    "editor.tabSize": 2
  },
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.colorTheme": "Cobalt2",
  "editor.fontLigatures": true, // always open cmd+p in a new tab
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "ruby.useBundler": true, //run non-lint commands with bundle exec
  "ruby.intellisense": "rubyLocate",
  "ruby.useLanguageServer": true, // use the internal language server (see below)
  "ruby.lint": {
    "rubocop": true
  },
  "ruby.format": "rubocop", // use rubocop for formatting
  "workbench.tree.indent": 15,
}