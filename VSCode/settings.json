{
  "window.zoomLevel": 1,
  "breadcrumbs.enabled": true,
  "editor.renderControlCharacters": true,
  "editor.fontSize": 16,
  "editor.fontFamily": "FiraCode-Retina, 'Fira Code', 'Hack Nerd Font', Menlo, Monaco, 'Courier New', monospace",
  "editor.tabCompletion": "on",
  "explorer.openEditors.visible": 1,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "o"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.quickOpen"
        }
      ]
    }
  ],
  //"editor.formatOnSave": true, // THIS WILL TRIGGER PRETTIER ON SAVE
  "prettier.eslintIntegration": true, // THIS WILL MAKE IT COMMUNICATE WITH ESLINT
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.tabSize": 2,
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[ruby]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[rust]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "rust-client.engine": "rust-analyzer",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.colorTheme": "Cobalt2",
  "editor.fontLigatures": true, // always open cmd+p in a new tab
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "ruby.useBundler": true, //run non-lint commands with bundle exec
  "ruby.intellisense": "rubyLocate", //ruby.intellisense": "rubyLocate",
  "ruby.useLanguageServer": true,
  "ruby.lint": {
    "rubocop": {
      "useBundler": true
     }
  },
  "ruby.format": "rubocop", // use rubocop for formatting
  "ruby.codeCompletion": false,
  //"ruby.rubocop.executePath": "/Users/joeed/.rvm/gems/ruby-2.5.5/bin/",
  //"ruby.rubocop.onSave": true,
  "solargraph.useBundler": true,
  "solargraph.definitions": true,
  "workbench.tree.indent": 16,
  "diffEditor.renderSideBySide": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.parameterHints": false,
  "tabnine.experimentalAutoImports": true,
  "vim.cursorStylePerMode.normal": "block-outline",
  "vim.insertModeKeyBindings": [
    {
        "before": ["j", "j"],
        "after": ["<Esc>"]
    }
  ],
  "editor.formatOnSaveMode": "modifications",
}
